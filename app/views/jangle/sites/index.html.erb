<%= link_to content_tag(:span, 'Create New Site'), new_jangle_site_path, :class => 'big button' %>
<h1>Sites</h1>

<ul class='list'>
  <% @sites.each do |jangle_site| %>
    <li id='jangle_site_<%= jangle_site.id %>'>
      <div class='item'>
        <div class='icon'></div>
        <div class='action_links'>
          <%= link_to 'Edit', edit_jangle_site_path(jangle_site) %>
          <%= link_to 'Delete', jangle_site_path(jangle_site), :method => :delete, :confirm => 'Are you sure?' %>
        </div>
        <div class='label'>
          <%= link_to jangle_site.label, edit_jangle_site_path(jangle_site) %>
          <div class='sublabel'>
            <%= link_to jangle_site.hostname, "http://#{jangle_site.hostname}/cms-admin" %>
          </div>
        </div>
      </div>
    </li>
  <% end %>
</ul>