<% content_for :right_column do %>
  <div id='page_save' class='box'>
    <label>
      <input type='checkbox'/>
      Published
    </label>
    <button></button>
  </div>
  <%= render :partial => 'jangle/uploads/index' %>
<% end %>

<%= form.text_field :label, :id => (@jangle_page.new_record?? 'slugify' : nil) %>

<div class='page_form_extras'>
  <% unless @jangle_site.jangle_pages.count == 0 || @jangle_site.jangle_pages.root == @jangle_page%>
    <%= form.text_field :slug, :id => 'slug' %>
  <% end %>
  <% if (options = Jangle::Layout.options_for_select(@jangle_site)).present? %>
    <%= form.select :jangle_layout_id, options, {}, 'data-page-id' => @jangle_page.id, :label => 'Layout' %>
  <% end %>
  <% if (options = Jangle::Page.options_for_select(@jangle_site, @jangle_page)).present? %>
    <%= form.select :parent_id, options %>
  <% end %>
  <% if (options = Jangle::Page.options_for_select(@jangle_site, @jangle_page, nil, 0, false)).present? %>
    <%= form.select :target_page_id, [['---- No Redirect ----', nil]] + options, :label => 'Redirect To Page' %>
  <% end %>
  <%= cms_hook :page_form, :object => form %>
</div>

<%= render :partial => 'form_blocks' %>

<%= form.simple_field nil, nil, :class => 'submit_element' do %>
  <%= form.check_box :is_published, :disable_builder => true %>
  <%= form.label_for :is_published, :label => 'Published' %>
  <%= form.submit @jangle_page.new_record?? 'Create Page' : 'Update Page', :disable_builder => true %>
  <%= form.submit 'Preview', :name => 'preview', :id => 'jangle_page_preview', :disable_builder => true %>
<% end %>