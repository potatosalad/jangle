<div id='file_uploads' class='box'>
  <div class='actions'>
    <a id='uploader_button' href='#' class='big button'>Upload Files</a>
  </div>
  <div id='uploaded_files'>
    <% current_site.assets.order_by(['name', :asc]).each do |file| %>
      <%= render :partial => 'jangle/assets/file', :object => file %>
    <% end %>
  </div>
</div>